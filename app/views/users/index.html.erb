<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Login</th>
      <th>Passwd</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.passwd %></td>
        <td><%= link_to 'mostrar', user , class:"btn btn-default" %></td>
        <td><%= link_to 'editar', edit_user_path(user), class:"btn btn-info" %></td>
        <td><%= link_to 'excluir', user, method: :delete, data: { confirm: 'tem certeza que deseja excluir?' } , class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

