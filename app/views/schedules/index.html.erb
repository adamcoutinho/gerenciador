<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Obs</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.date %></td>
        <td><%= schedule.obs %></td>
        <td><%= schedule.status %></td>
        <td><%= link_to 'mostrar', schedule ,class:"btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_schedule_path(schedule), class:"btn btn-info" %></td>
        <td><%= link_to 'excluir', schedule, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'criar novo projeto', new_schedule_path, class:"btn btn-warning" %>
